<%# render 'shared/errors', obj: @forgetvo %>

<div class="row mt-5">
  <div class="col-3"></div>
  <div class="col-6">
    <%# form_for(@model, :html => {class: "form-horizontal", role: "form"} ) do |f| %>
    <%# form_for @model, :url => url_for(:controller => 'users', :action => 'send_reset_password') %>
    <%= form_for(@model, :url => send_reset_password_path) do |f| %>
    <div class="card" style="">
      <div class="card-body">
        <%= image_tag 'logo-full.png', style: 'width:50%; height:auto;'%>
        <h5 class="mt-3 text-center">Forget Password</h5>
        <hr class="mt-3 mb-3">
        <div class="form-group">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter Email Address" %>
        </div>
        <div class="form-group">
          <%= f.submit "Reset Password", class:"btn btn-primary btn-block" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="col-3"></div>
</div>

<p class="text-center mt-3 mb-3">
  <small><%= link_to 'Already have an an account? Log In', login_path %></small>
  <br>
  <small class="text-muted">&copy; SimpleApp 2019</small>
</p>
