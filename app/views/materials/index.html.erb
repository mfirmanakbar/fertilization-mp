<h4>Material Stock</h4>
<hr>

<div class="center">

  <%= link_to 'Create New', new_material_path, class:"btn btn-success btn-sm" %>
  <br><br>

  <table class="table table-bordered">
    <thead>
      <tr align="center">
        <th scope="col">No</th>
        <th scope="col">Material Name</th>
        <th scope="col">Current Stock Qty</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @material_list.each_with_index do |val, index| %>
      <tr>
        <th scope="row"><%= (index + 1) %></th>
        <td align="left"><%= val.material_name %></td>
        <td align="right"><%= number_with_delimiter(val.stock_qty) %></td>
        <td align="center">
          <div class="btn-group" role="group" aria-label="Basic example">
            <%= link_to 'View', material_path(val), class:"btn btn-info btn-sm" %>
            <%= link_to 'Change', edit_material_path(val), class:"btn btn-warning btn-sm" %>
            <!-- <button type="button" class="btn btn-danger btn-sm"> Delete </button> -->
            <%= link_to 'Delete', material_path(val),
                method: :delete, data: { confirm: "Are you sure want to delete this article?"},
                class: "btn btn-sm btn-danger" %>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
