<h4>Job Position</h4>
<hr>

<div class="center">

  <div class="row">
    <div class="col-6" align="left">
      <%= link_to 'Home', dashboard_path, class:"btn btn-danger btn-sm" %>
    </div>
    <div class="col-6" align="right">
        <%= link_to 'Create New', new_role_path, class:"btn btn-success btn-sm" %>
        <%= link_to 'Export CSV', roles_path(format: "csv"), class:"btn btn-primary btn-sm" %>
    </div>
  </div>

  <%# link_to 'Change', edit_material_path(val), class:"btn btn-warning btn-sm" %>
  <%# link_to 'Delete', material_path(val),
      method: :delete, data: { confirm: "Are you sure want to delete this article?"},
      class: "btn btn-sm btn-danger" %>

  <hr>

  <div class="container row">
    <% @roles.each_with_index do |val, index| %>
      <div class="col-3 boxes">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= val.role_name %></h5>
            <p class="card-text">Can access all/some module.</p>
            <hr>
            <div align="right">
              <div class="btn-group" role="group">
                <%= link_to 'Change', edit_role_path(val), class:"btn btn-primary btn-sm" %>
                <!-- <button type="button" class="btn btn-danger btn-sm">Delete</button> -->
                <%= link_to 'Delete', role_path(val), method: :delete,
                    data: { confirm: "Are you sure want to delete this article?"},
                    class: "btn btn-danger btn-sm" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
